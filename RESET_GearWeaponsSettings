#CLASS 0
$CLASS = "Tools|Gear|Settings"

#TR WeaponWielded {~*({@Gear_WeaponNames})*~(wielded~)} {
#VAR Wielding {1} {} VAR
Gear_LookupWeapon %lower(%0)
Gear_AssignWeapon %lower(%0)
} $CLASS

#TR WeaponWield {You wield ({@Gear_WeaponNames})} {
#VAR Wielding {1} {} VAR
#VAR HandsFree {1} {} VAR
Gear_LookupWeapon %lower(%0)
Gear_AssignWeapon %lower(%0)
} $CLASS

#TR WeaponWieldedInHands {You are holding ({@Gear_WeaponNames}) ~(wielded~)} {
#VAR Wielding {1} {} VAR
#VAR HandsFree {0} {} VAR
Gear_LookupWeapon %lower(%0)
Gear_AssignWeapon %lower(%0)
} $CLASS

#TR WeaponWear {You wear *({@Gear_Sheaths}) {"containing|with"} ({@Gear_WeaponNames}).} {
Gear_LookUpArmour %lower(%1)
Gear_AssignArmour %lower(%1)
Gear_AssignWeapon %lower(%2)
} $CLASS

#TR WeaponInWornSheath {~**({@Gear_Sheaths})* {"containing|with"} ({@Gear_WeaponNames}) ~(worn~)} {
Gear_LookUpArmour %lower(%1)
Gear_AssignArmour %lower(%2)
Gear_LookupWeapon %lower(%2)
Gear_AssignWeapon %lower(%2)
} $CLASS

#TR WeaponStore {You store ({@Gear_WeaponNames}) in ({@Gear_Sheaths}).} {
#VAR Wielding {} {} VAR
Gear_LookupWeapon %lower(%1)
Gear_AssignWeapon %lower(%1)
Gear_LookUpArmour %lower(%2)
Gear_AssignArmour %lower(%2)
} $CLASS

#TR Daggers {~*({@Gear_Daggers})} {
Gear_AssignDagger %lower(%1)
} $CLASS

#TR WeaponRemoveSheath {You remove *({@Gear_Sheaths}) {"containing|with"} ({@Gear_WeaponNames})} {
Gear_LookUpArmour %lower(%1)
Gear_UnassignArmour
Gear_UnAssignWeapon
} $CLASS

#TR WeaponRemove {You remove ({@Gear_WeaponNames})} {
#VAR Wielding {} {} VAR
} $CLASS


//Special Weapon Emotes
#TR SheathLHBS {You slide the bone sword into its accompanying sheath smoothly.} {
#VAR Wielding {} {} VAR
Gear_LookupWeapon "a long haradrim bone sword"
Gear_AssignWeapon "a long haradrim bone sword"
} $CLASS

#TR OnehandedBattleAxe {({@Messages_OneHandedBattleAxe})} {
