#CLASS 0
DeclareGearVariables

#VAR Wep {} {} VAR
#VAR Dag {} {} VAR
#VAR Wielding {} {} VAR



#FORALL @ArmourSlots {
  #VAR %concat("My",%proper(%i)) {} {} VAR
  #FORALL @ArmourStats {
    #VAR %concat("My",%proper(%i),"_",%j) {} {} VAR
  }
}

//Current weapon stats
#VAR %concat("MyWep") {} {} VAR
#FORALL @WeaponStats {
  #VAR %concat("MyWep","_",%i) {} {} VAR
}

#FORALL @RESET_GeneralGear {#VAR %i {} {} VAR}
#FORALL @RESET_Gear {#VAR %concat("Gear_",%i) {} {} VAR}

#CLASS 0

//Vars used for storing my worn gear stats
#VAR Gear_List {} {} VAR
#VAR Gear_Armour_List {} {} VAR
#FORALL @ArmourStats {
  #VAR %concat("Gear_Armour_",%i) {} {} VAR
}

//Vars used for performing stat compares (current gear vs new gear)
//These vars will be stored from lookups
#VAR Gear_Armour_Compare_Result {} {} VAR
#FORALL @ArmourStats {
  #VAR %concat("Gear_CompareArmour_",%i) {} {} VAR
}


//Vars used for performing record lookups (not to be used for compare)
#FORALL @ArmourStats {
  #VAR %concat("Gear_LookupArmour_",%i) {} {} VAR
}

//Vars used for storing old item stats on a gear swap
#FORALL @ArmourStats {
  #VAR %concat("Gear_Armour_Old_",%i) {} {} VAR
}


//Vars used for calculating total armour stats
#FORALL @ArmourStats {
  #VAR %concat("Gear_Armour_Total_",%i) {} {} VAR
}



//Lookup records for reference
#FORALL @WeaponStats {
  #VAR %concat("Gear_LookupWeapon_",%i) {} {} VAR
}

#VAR Gear_Weapon_Compare_Result {} {} VAR
#FORALL @WeaponStats {
  #VAR %concat("Gear_CompareWeapon_",%i) {} {} VAR
}


//Vars used for storing old item stats on a gear swap
#FORALL @WeaponStats {
  #VAR %concat("Gear_Weapon_Old_",%i) {} {} VAR
}

